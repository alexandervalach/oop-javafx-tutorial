<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:id="app"
          fx:controller="controller.DashboardController"
          prefHeight="600" prefWidth="800">

    <Label id="banner" alignment="CENTER" text="Knižnica skladieb"
           GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"/>

    <Button fx:id="tracks" prefWidth="120" prefHeight="120" text="Skladby"
            GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button fx:id="logout" prefWidth="120" prefHeight="120" text="Odhlásiť sa"
            GridPane.rowIndex="2" GridPane.columnIndex="1"/>

</GridPane>
